{%- assign canonical_with_slash = canonical_url -%}
{%- if request.page_type != "index" -%}{%- assign canonical_with_slash = canonical_url | append: '/' -%}{%-endif-%}

<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
  <meta name="google-site-verification" content="P22Soub9nFct7mbYzAxb6L6-3Z3eWt7UleMEDbv6q6Q" />
  <link rel="canonical" href="{{ canonical_with_slash }}">
  <link rel="shortcut icon" href="{{ 'favicon_32px.png' | asset_url }}" type="image/png">
  <link rel="apple-touch-icon" href="{{ 'favicon_180px.png' | asset_url }}">
  {% include "_js_data" %}
  {% include "_js_entry" %}
  {% include 'google-fonts' %}
  {% include "_seo_tags" %}
  {% include 'social-meta-tags' %}
  {{ content_for_header }}
</head>
<body body data-spy="scroll" class="no-touch template-{{ template | split: '.' | first }} host-{{request.host| replace: '.', '-'}}">
  {% section 'header' %}
  <div class="page-container" id="PageContainer">
   <main class="main-content" id="MainContent" role="main">{{ content_for_layout }}</main>
  {% section 'footer' %}
  </div>
</body>
</html>
