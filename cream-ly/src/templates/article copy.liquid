<!-- /templates/article.liquid -->

<article style="padding:10px; max-width: 1190px; margin: auto;" class="article" itemscope
    itemtype="http://schema.org/Article">

    <header>
        <h1>{{ article.title }}</h1>
        {% capture author %}<strong>{{ article.author }}</strong>{% endcapture %}
        {% capture date %}<time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">{{
            article.published_at | date: format: 'date' }}</time>{% endcapture %}
        <p class="txt--minor"></p>
    </header>

    {% if article.image %}
    <img src="{{ article.image.src | img_url: '500x' }}" />
    {% endif %}

    <div class="rte" itemprop="articleBody">
        {{ article.content }}
    </div>

    {% if article.tags.size > 0 %}
    <ul>
        <li>
            {% for tag in article.tags %}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
            {% endfor %}
        </li>
    </ul>
    {% endif %}


</article>