{%if page.handle == "copy-of-privacy-policy" or page.handle == "copy-of-terms" %}
<div style="margin-top:30px" class="section-header text-center">
  <h1>{{ page.title }}</h1>
  <div style="max-width:1000px; margin:auto; text-align:left">
    <div data-react-component-placeholder="Translate">{{ page.content }}</div>
  </div>
</div>
{%else%}
<div style="width:95%; max-width:1100px; margin:auto; margin-bottom:50px;">
  <div class="grid">
    <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
      <div class="section-header text-center">
        <h1>{{ page.title }}</h1>
      </div>
      <div class="rte">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>
{%endif%}