{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "allowJs": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": false,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "node_modules.private"],
  "include": ["src/**/*"]
}
