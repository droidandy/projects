%table.mcnTextBlock(border="0" cellpadding="0" cellspacing="0" style="min-width:100%;" width="100%")
  %tbody.mcnTextBlockOuter
    %tr
      %td.mcnTextBlockInner(style="padding-top:9px; padding-bottom: 10px" valign="top")
        %table(align="left" border="0" cellpadding="0" cellspacing="0" style="width:100%;" width="100%")
          %tr
            %td(style="width:600px; padding-bottom: 10px" valign="top" width="600")
              %table.mcnTextContentContainer(align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%")
                %tbody
                  %tr
                    %td(style="width: 100px;text-align: center;font-weight: 300;font-size:30px;color:#373737;padding:40px 0;" colspan="2" width="100" valign="top")
                      New Feedback
                  %tr
                    %td.mcnTextContent(style="padding-right:18px; padding-bottom:9px; color: #808080; font-size: 14px;" width="100" valign="top") Service ID:
                    %td.mcnTextContent(style="padding-bottom:9px;" valign="top")
                      %span= @feedback.booking.order_id
                  %tr
                    %td.mcnTextContent(style="padding-right:18px; padding-bottom:9px; color: #808080; font-size: 14px;" width="100" valign="top") User:
                    %td.mcnTextContent(style="padding-bottom:9px;" valign="top")
                      %span= @feedback.user.full_name
                  %tr
                    %td.mcnTextContent(style="padding-right:18px; padding-bottom:9px; color: #808080; font-size: 14px;" width="100" valign="top") Company:
                    %td.mcnTextContent(style="padding-bottom:9px;" valign="top")
                      %span= @feedback.user.company.name

                  - if @feedback.rating.present?
                    %tr
                      %td.mcnTextContent(style="padding-right:18px; padding-bottom:40px; color: #808080; font-size: 14px;" width="100" valign="top") Rating:
                      %td.mcnTextContent(style="padding-bottom:40px;" valign="top")
                        %span= @feedback.rating

                  - if @feedback.message.present?
                    %tr
                      %td(style="padding: 20px 30px; background-color: #f5f5f5; border-radius: 10px;line-height: 24px;" colspan="2" valign="top")
                        %span= @feedback.message
