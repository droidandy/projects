%table.mcnTextBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
  %tbody.mcnTextBlockOuter
    %tr
      %td.mcnTextBlockInner{:style => "padding-top:9px;", :valign => "top"}
        %table{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "width:100%;", :width => "100%"}
          %tr
            %td{:style => "width:600px;", :valign => "top", :width => "600"}
              %table.mcnTextContentContainer{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "max-width:100%; min-width:100%;", :width => "100%"}
                %tbody
                  %tr
                    %td.mcnTextContent{:style => "padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;", :valign => "top"}

                      %p Hi #{@user.try(:full_name)},
                      %p You’ve recently requested to reset your password.
                      %p To do so, please click on the ‘Reset Password’ button below.
%table.mcnButtonBlock{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "min-width:100%;", :width => "100%"}
  %tbody.mcnButtonBlockOuter
    %tr
      %td.mcnButtonBlockInner{:align => "center", :style => "padding-top:0; padding-right:18px; padding-bottom:18px; padding-left:18px;", :valign => "top"}
        %table.mcnButtonContentContainer{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-collapse: separate !important;border-radius: 3px;background-color: #00ADD8;"}
          %tbody
            %tr
              %td.mcnButtonContent{:align => "center", :style => "font-family: Helvetica; font-size: 14px; padding: 18px;", :valign => "middle"}
                %a.mcnButton{href: root_url + "auth/reset?token=#{@user.reset_password_token}", :style => "font-weight: bold;letter-spacing: -0.5px;line-height: 100%;text-align: center;text-decoration: none;color: #FFFFFF;"} Reset password
