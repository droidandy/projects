<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900" rel="stylesheet">
</head>
<html>
  <table border="0" cellpadding="0" cellspacing="0" style="margin:0; padding-top:40px; padding-bottom:40px; font-family: Roboto; color: #000;" width="100%" height="100%" bgcolor="#f0f5fa">
    <tr>
      <td style="padding:0px;margin:0px;">&nbsp;</td>
      <td align="center" width="700">
        <table border="0" style="border-radius: 4px; background:#ffffff" width="90%" bgcolor="#ffffff">
          <span style="display: none;">Preheader</span>
          <tr>
            <td style="padding: 20px;">
              <table border="0" width="100%">
                <tr>
                  <td>
                    <%= short_image_set_tag '/images/emails/Logo_light-bg@2x.png', width: '106', height: '50' %>
                  </td>
                  <td align="right" style="font-size: 14px; text-align: right;">
                    <p style="margin: 0; margin-top: 12px;">
                      <%= Time.current.strftime("%d %B, %Y") %>
                    </p>
                    <p style="margin: 0; margin-top: 4px;">
                      <%= Time.current.strftime("%H:%M") %>
                    </p>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td style="padding: 20px;">
              <table cellpadding="20" width="100%">
                <tr height="200">
                  <td bgcolor="#f0f5fa" align="center" style="border-radius: 4px;">
                    <%= short_image_set_tag '/images/emails/faq-email-icn@2x.png', width: '120', height: '120' %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td style="padding: 20px;">
              <table border="0" style="padding-bottom: 25px;">
                <tr>
                  <!-- add if statement -->
                  <!-- <td> <img width="70px" height="70px" src="img/linked_icn@2x.png" style="border-radius: 50%"/> </td> -->
                  <td style="padding-bottom: 20px;">
                    <table border="0" cellpadding="0" cellspacing="0">
                      <tr height="70">
                        <td>
                          <%=
                            short_image_set_tag avatar_api_v1_user_url(@user, host: Rails.application.secrets.asset_host),
                                                width: '70',
                                                height: '70',
                                                style: "border-radius: 50%; background:#f0f5fa;"
                          %>
                        </td>
                      </tr>
                    </table>
                  </td>
                  <!-- -->
                  <td style="padding-bottom: 10px;">
                    <table border="0" cellpadding="0" cellspacing="0">
                      <tr>
                        <td>
                          <span style=" font-size: 20px; font-weight: 500;">
                            <%= @user.name %>
                          </span>
                        </td>
                      </tr>
                      <tr>
                        <td style="padding-top: 6px;">
                          <span style="font-size: 16px; color: #a9b1ba;">Gett ID:</span>
                          <span style="font-size: 16px; font-weight: 500; color: #282c37;">
                            <%= @user.gett_id %>
                          </span>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
              <table>
                <% if @user.phone %>
                  <tr>
                    <td style="padding-bottom: 10px; padding-right: 10px;">
                      <span>
                        <%= short_image_set_tag '/images/emails/phone-icn@2x.png', width: '16', height: '16' %>
                      </span>
                    </td>
                    <td style="padding-bottom: 10px;">
                      <span style="font-size: 14px; font-weight: 500; color: #303030;">
                        <%= @user.phone %>
                      </span>
                    </td>
                  </tr>
                <% end %>
                <tr>
                  <td style="padding-bottom: 10px; padding-right: 10px;">
                    <span>
                      <%= short_image_set_tag '/images/emails/email-icn@2x.png', width: '20', height: '14' %>
                    </span>
                  </td>
                  <td style="padding-bottom: 10px;">
                    <span style="font-size: 14px; font-weight: 500; color: #303030;">
                      <%= @user.email %>
                    </span>
                  </td>
                </tr>
              </table>
              <table border="0" width="100%">
                <tr>
                  <td bgcolor="#f0f5fa" style="border-radius: 4px; font-size: 14px; line-height: 1.5; padding:20px;">
                    <p>
                      <%= @message %>
                    </p>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr height="30"></tr>
        </table>
      <td style="padding:0px;margin:0px;">&nbsp;</td>
      </td>
    </tr>
  </table>
</html>
