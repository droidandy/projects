<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:timePickerDialogTheme">@style/Picker.Theme</item>
        <item name="android:datePickerDialogTheme">@style/Picker.Theme</item>
        <item name="android:textColorHighlight">#bbbbbf</item>
        <item name="colorControlActivated">#373737</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#33000000</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="Picker.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#373737</item>
        <item name="colorControlActivated">#373737</item>
        <item name="colorControlHighlight">#373737</item>
        <item name="textColorAlertDialogListItem">#373737</item>
        <item name="android:textColorPrimary">#373737</item>
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <item name="android:textColorSecondaryInverse">#a0a0a0</item>
        <item name="android:textColor">#373737</item>
    </style>
</resources>
