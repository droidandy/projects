{
  "name": "@products/core-be",
  "version": "1.0.0",
  "description": "core-be",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build-watch": "tsc --watch",
    "dev": "cross-env NODE_ENV=development npm run typeorm-dev migration:run && cross-env NODE_ENV=development ts-node-dev --respawn --debounce 100 ./src/launch.ts",
    "start": "node dist/core-be/src/launch.js",
    "cli": "moleculer connect Redis",
    "ci": "jest --watch --config jest.config.js",
    "test:unit": "jest src/* --runInBand --config jest.config.js",
    "coverage:unit": "npm run test:unit -- --coverage --colors --watchAll=false --detectOpenHandles --forceExit",
    "test:withdb": "cross-env TS_NODE=true jest src/* --runInBand --config jest.withdb.config.js --detectOpenHandles",
    "coverage:withdb": "npm run test:withdb -- --coverage --colors --watchAll=false --detectOpenHandles --forceExit",
    "test:apex-extend": "cross-env TS_NODE=true jest src/* --runInBand --config jest.apex-extend.config.js --detectOpenHandles",
    "coverage:apex-extend": "npm run test:apex-extend -- --coverage --colors --watchAll=false --detectOpenHandles --forceExit",
    "test:integration": "jest ../test/integration/core-be/* --runInBand --colors --config ../test/jest.integration.config.js --detectOpenHandles --forceExit",
    "test": "npm run test:unit && npm run test:withdb && npm run test:integration",
    "lint": "eslint --ext .js,.ts --config ../../.eslintrc.js .",
    "db:revert-migration": "cross-env NODE_ENV=development npm run typeorm-dev migration:revert",
    "db:run-migrations": "cross-env NODE_ENV=development npm run typeorm-dev migration:run",
    "typeorm-dev": "ts-node ./node_modules/typeorm/cli.js",
    "generate-schema": "ts-node ./src/utils/graphql/generate-schema.ts current-schema.graphql",
    "get-idtoken": "ts-node -e 'require(\"../utils/src/get-idtoken\").printIdTokenForTestUser()'",
    "get-idtoken:readonly-adm": "ts-node -e 'require(\"../utils/src/get-idtoken\").printIdTokenForReadonlyAdminUser()'"
  },
  "keywords": [
    "microservices"
  ],
  "author": "",
  "devDependencies": {
    "@types/lodash": "^4.14.177",
    "@types/seedrandom": "^3.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^14.1.0",
    "jest": "^27.3.1",
    "jest-cli": "^27.3.1",
    "lodash": "^4.17.21",
    "mockdate": "^3.0.5",
    "nock": "^13.2.1",
    "seedrandom": "^3.0.5",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tslog": "^3.2.2"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.2",
    "@graphql-tools/load": "^7.4.1",
    "@types/jest": "^27.0.2",
    "@types/jws": "^3.2.4",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.11.6",
    "@types/pg": "^8.6.1",
    "@types/pg-copy-streams": "^1.2.1",
    "@types/uuid": "^8.3.1",
    "@types/validator": "^13.7.0",
    "apollo-server": "^3.4.0",
    "apollo-service": "^1.0.3",
    "async-mutex": "^0.3.2",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.7",
    "graphql": "^15.7.1",
    "graphql-parse-resolve-info": "^4.12.0",
    "graphql-tools": "^8.2.0",
    "jose": "^1.28.0",
    "jwks-rsa-promisified": "^1.0.2",
    "jws": "^4.0.0",
    "pg": "^8.7.1",
    "pg-copy-streams": "^6.0.2",
    "pg-error-enum": "^0.5.0",
    "reflect-metadata": "^0.1.13",
    "short-uuid": "^4.2.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.38",
    "typeorm-naming-strategies": "^2.0.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">= 12.x.x"
  }
}
