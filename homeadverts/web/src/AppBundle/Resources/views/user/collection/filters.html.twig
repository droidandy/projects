{% import _self as helper %}
{% from 'AppBundle:filters:filter_elements.html.twig' import ha_filter_select %}

{% set action = path('ha_user_search', {
	'user_type':user_type,
	'id': search.location.id,
	'slug': search.location.slug
	})
%}

<div class="container filters-wrapper">
	<form method="get" action="{{ action }}">
		<div class="filters">
			<div id="primary-filter" class="primary-filters">
				<ul>
					<li class="filter">
					   {{ ha_filter_select(form.user_type) }}
					</li>
					<li class="filter --separator">
						{{ ha_filter_select(form.sort) }}
					</li>
					<li class="filter">
						<a rel="nofollow"
						   href="#"
						   class="main-filter button-map {% if map_view %}selected{% endif %}">
							{% trans %}search.filters.map{% endtrans %}
						</a>
					</li>
				</ul>
			</div>
		</div>
	</form>
</div>
