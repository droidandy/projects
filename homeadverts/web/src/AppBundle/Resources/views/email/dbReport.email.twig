{% extends 'AppBundle:email/layout:base.email.twig' %}

{% block html_content %}
    <strong>Ledger</strong> <br/>
    Sync date: {{ summary.ledger.sync_date }} <br/>
    User: {{ summary.ledger.ledger.user }} <br/>
    Company: {{ summary.ledger.ledger.company }} <br/>
    Office: {{ summary.ledger.ledger.office }} <br/>
    Property: {{ summary.ledger.ledger.property }} <br/>
    <br/>

    <strong>Companies</strong> <br/>
    Total: {{ summary.db_summary.company.total }} <br/>
    Active: {{ summary.db_summary.company.active }} <br/>
