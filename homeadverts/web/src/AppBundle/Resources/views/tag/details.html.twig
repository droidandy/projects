{% extends 'AppBundle:layout:root.html.twig' %}

{% block body %}
    <div class="blog">
        {% include 'AppBundle:article/card:covers.html.twig' %}

        <div id="featured" class="row">
            <div class="headline --separator --collection">
                <h1 class="heading">
                    {{ tag.displayName }}
                </h1>
                <span class="sub-heading --small">
                    This section displays editorial content generated by members of our community
                    representing the fines homes, services and livestyle products from
                    all around the world.
                </span>

                {% include 'AppBundle:tag:follow_button.html.twig' %}
            </div>
        </div>

        <div class="items-collection">
            <ul class="list"
                data-page-total="{{ pageTotal }}"
                data-page-current="{{ page }}">

                {% include 'AppBundle:article:details_collection.html.twig'%}
            </ul>
        </div>
    </div>
{% endblock body %}
