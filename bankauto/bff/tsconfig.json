{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "esnext",
      "webworker"
    ],
    "baseUrl": "app",
    "rootDirs": ["app"],
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
  ]
}
